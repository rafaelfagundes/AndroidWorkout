<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="40dp"
    tools:context=".activities.SessionsListActivity">

    <LinearLayout
        android:id="@+id/topTextLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_horizontalAlign="start"
        android:textAlignment="textStart"
        >

        <TextView
            android:id="@+id/textViewStepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/stepCountLabel"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/heightLabel"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/weightLabel"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomTextLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topTextLine"
        app:flow_horizontalAlign="start"
        android:textAlignment="textStart"
        >

        <TextView
            android:id="@+id/textViewCaloriesBurned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caloriesBurnedLabel"
            android:textSize="11sp" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#FFA500"
        app:layout_constraintTop_toBottomOf="@id/bottomTextLine" />

</androidx.constraintlayout.widget.ConstraintLayout>